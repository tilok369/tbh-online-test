    <div class="col-lg-10 col-md-10 col-sm-12 offset-lg-1 offset-md-1">
        <div class="card">
            <div class="card-body bg-dark">
                <h4 class="text-white">View/Edit Question Set</h4>
                <input type="hidden" id="exam-id" value="@ViewBag.ExamId" />
                <input type="hidden" id="exam-created-on" value="@DateTime.Now.ToString("yyyy-MM-dd hh:mm:ss")" />
                <input type="hidden" id="exam-created-by" value="@User.Identity.Name" />
                <input type="hidden" id="question-created-on" value="@DateTime.Now.ToString("yyyy-MM-dd hh:mm:ss")" />
                <input type="hidden" id="question-created-by" value="@User.Identity.Name" />
                <input type="hidden" id="exam-code" value="" />
                <div class="mb-3">
                    <label for="url" class="form-label text-white">Exam URL</label>
                    <input type="text" class="form-control" id="url" name="title" aria-describedby="urlHelp">
                    <div id="urlHelp" class="form-text text-secondary">Cope this URL to distribute for the examinee</div>
                </div>
                <div class="mb-3">
                    <label for="title" class="form-label text-white">Title</label>
